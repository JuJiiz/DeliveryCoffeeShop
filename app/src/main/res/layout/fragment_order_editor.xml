<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/white">

    <RelativeLayout
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="?attr/actionBarSize"
            android:elevation="4dp"
            android:background="@android:color/holo_orange_dark">

        <ImageView
                android:id="@+id/btnBack"
                android:layout_width="?attr/actionBarSize"
                android:layout_height="?attr/actionBarSize"
                android:layout_alignParentStart="true"
                android:padding="8dp"
                app:srcCompat="@drawable/ic_arrow_back"/>

    </RelativeLayout>

    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/toolbar">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="8dp">

            <LinearLayout
                    android:id="@+id/layoutName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="4">

                <TextView
                        android:id="@+id/tvCustomerName"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start"
                        android:text="ชื่อผู้รับ"
                        android:textColor="@android:color/black"
                        android:textSize="20dp"
                        android:layout_weight="1"/>

                <android.support.design.widget.TextInputLayout
                        android:id="@+id/layoutCustomerName"
                        style="@style/Widget.TextInputLayout"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:focusableInTouchMode="true"
                        android:layout_weight="3"
                        app:errorEnabled="true">

                    <android.support.design.widget.TextInputEditText
                            android:id="@+id/edtCustomerName"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:drawablePadding="8dp"
                            android:inputType="textPersonName"
                            android:maxLines="1"
                            android:background="@drawable/input_field_background"/>

                </android.support.design.widget.TextInputLayout>

            </LinearLayout>

            <LinearLayout
                    android:id="@+id/layoutPhone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="4">

                <TextView
                        android:id="@+id/tvCustomerPhone"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start"
                        android:text="เบอร์ติดต่อ"
                        android:textColor="@android:color/black"
                        android:textSize="20dp"
                        android:layout_weight="1"/>

                <android.support.design.widget.TextInputLayout
                        android:id="@+id/layoutCustomerPhone"
                        style="@style/Widget.TextInputLayout"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:focusableInTouchMode="true"
                        android:layout_weight="3"
                        app:errorEnabled="true">

                    <android.support.design.widget.TextInputEditText
                            android:id="@+id/edtCustomerPhone"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:drawablePadding="8dp"
                            android:inputType="phone"
                            android:maxLines="1"
                            android:background="@drawable/input_field_background"/>

                </android.support.design.widget.TextInputLayout>

            </LinearLayout>

            <LinearLayout
                    android:id="@+id/layoutAddress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="8dp"
                    android:weightSum="4">

                <TextView
                        android:id="@+id/tvCustomerAddress"
                        android:layout_width="0dp"
                        android:layout_gravity="start"
                        android:layout_height="wrap_content"
                        android:text="ที่อยู่"
                        android:textColor="@android:color/black"
                        android:textSize="20dp"
                        android:layout_weight="1"/>

                <android.support.design.widget.TextInputLayout
                        android:id="@+id/layoutCustomerAddress"
                        style="@style/Widget.TextInputLayout"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:focusableInTouchMode="true"
                        android:layout_weight="3"
                        app:errorEnabled="true">

                    <android.support.design.widget.TextInputEditText
                            android:id="@+id/edtCustomerAddress"
                            android:layout_width="match_parent"
                            android:layout_height="150dp"
                            android:drawablePadding="8dp"
                            android:gravity="start"
                            android:inputType="text"
                            android:maxLines="1"
                            android:background="@drawable/input_field_background"/>

                </android.support.design.widget.TextInputLayout>
            </LinearLayout>

            <LinearLayout
                    android:id="@+id/layoutLocation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="8dp"
                    android:weightSum="4">

                <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:layout_weight="1">

                    <TextView
                            android:id="@+id/tvCustomerLocation"
                            android:layout_width="match_parent"
                            android:layout_gravity="start"
                            android:layout_height="wrap_content"
                            android:text="ตำแหน่ง"
                            android:textColor="@android:color/black"
                            android:textSize="20dp"/>

                    <TextView
                            android:layout_width="match_parent"
                            android:layout_gravity="start"
                            android:layout_height="wrap_content"
                            android:text="*ไม่บังคับ"
                            android:textColor="@android:color/holo_red_light"
                            android:textSize="12dp"/>

                </LinearLayout>

                <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="3">

                    <android.support.design.widget.TextInputLayout
                            android:id="@+id/layoutCustomerLocation"
                            style="@style/Widget.TextInputLayout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_toStartOf="@+id/btnMyLocation"
                            android:focusableInTouchMode="true"
                            app:errorEnabled="true">

                        <android.support.design.widget.TextInputEditText
                                android:id="@+id/edtCustomerLocation"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:drawablePadding="8dp"
                                android:hint="Lat, Lng"
                                android:inputType="text"
                                android:focusable="false"
                                android:maxLines="1"
                                android:background="@drawable/input_field_background"/>

                    </android.support.design.widget.TextInputLayout>

                    <ImageButton
                            android:id="@+id/btnMyLocation"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            app:srcCompat="@drawable/ic_my_location"/>

                </RelativeLayout>
            </LinearLayout>

            <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    app:cardElevation="4dp"
                    app:cardCornerRadius="8dp">

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                    <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@android:color/holo_orange_dark"
                            android:text="รายชื่อสินค้า"
                            android:textColor="@android:color/black"
                            android:padding="8dp"/>

                    <android.support.v7.widget.RecyclerView
                            android:id="@+id/rvCart"
                            android:layout_width="match_parent"
                            android:overScrollMode="never"
                            android:layout_height="150dp"/>

                </LinearLayout>
            </android.support.v7.widget.CardView>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="8dp"
                    android:weightSum="4">

                <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:layout_weight="1">

                    <TextView
                            android:id="@+id/tvNetPrice"
                            android:layout_width="match_parent"
                            android:layout_gravity="start"
                            android:layout_height="wrap_content"
                            android:text="ราคารวม"
                            android:textColor="@android:color/black"
                            android:textSize="20dp"/>

                    <TextView
                            android:layout_width="match_parent"
                            android:layout_gravity="start"
                            android:layout_height="wrap_content"
                            android:text="(บาท)"
                            android:textSize="12dp"/>

                </LinearLayout>

                <android.support.design.widget.TextInputLayout
                        android:id="@+id/layoutNetPrice"
                        style="@style/Widget.TextInputLayout"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:focusableInTouchMode="true"
                        android:layout_weight="3"
                        app:errorEnabled="true">

                    <android.support.design.widget.TextInputEditText
                            android:id="@+id/edtNetPrice"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:drawablePadding="8dp"
                            android:inputType="numberDecimal"
                            android:focusable="false"
                            android:maxLines="1"
                            android:background="@drawable/input_field_background"/>

                </android.support.design.widget.TextInputLayout>

            </LinearLayout>

            <Button
                    android:id="@+id/btnCreateOrder"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:padding="20dp"
                    android:layout_marginTop="8dp"
                    android:text="สร้างรายการ"/>

        </LinearLayout>

    </ScrollView>

</RelativeLayout>